{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "api:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"volumes": [
					{
					  "containerPath": "/api",
					  "localPath": "${workspaceFolder}"
					}
				],				
				"ports": [
					{
						"containerPort": 9000,
						"hostPort": 9000
					}
				]
			},				
			"python": {
				"args": [
					"evaluator_app:app",
					"--host",
					"0.0.0.0",
					"--port",
					"9000"
				],
				"module": "uvicorn"
			}
		}
	]
}